{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitAny": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "outDir": "./dist",
    "types": ["node", "mocha"],
    "typeRoots": ["node_modules/@types", "types"],
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
