include space

mixin button(url, text, width)
  table(width="100%" height="69" border="0" cellpadding="0" cellspacing="0")
    tr
      td(height=29)
        +space()
    tr
      td(height=40)
        table.buttonWrapper(width="100%" height="40" border="0" cellpadding="0" cellspacing="0")
          tr
            td
              +space()
            td.buttonConfirmWrapper(width=width height="40")
              a.buttonConfirm(href=url || "#")=text
            td
              +space()
