{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "jsxFactory": "h",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    // https://mobx.js.org/installation.html#use-spec-compliant-transpilation-for-class-properties
    "useDefineForClassFields": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
